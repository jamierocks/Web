{% extends 'KorobiWebBundle::layout.html.twig' %}

{% set page_title = channel_name ~ ' on ' ~ network_name %}

{% block body %}
    <h1>{{ channel_name }} on {{ network_name }}</h1>
    <h2>Topic: <em>TODO: Felix needs to store these</em></h2>
    <strong>Command Prefix: </strong> {{ command_prefix }}<br>
    <strong>Last activity: </strong> <time datetime="{{ channel.LastValidContentAt.getTimestamp() }}" title="{{ channel.LastValidContentAt.getTimestamp()|date("c") }}">
    {{ relativeTime(now, channel.LastValidContentAt.getTimestamp()) }}
</time><br>
    {% for link in links %}
        <a href="{{ link.href }}">{{ link.name }}</a><br>
    {% endfor %}
{% endblock %}
