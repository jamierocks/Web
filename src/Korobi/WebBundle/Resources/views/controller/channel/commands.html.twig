{% extends 'KorobiWebBundle::layout.html.twig' %}

{% set page_title = channel_name ~ " on " ~ network_name ~ " - Commands" %}

{% block body %}
    <h1>Commands for {{ channel_name }} on {{ network_name }}</h1>
    <div class="commands">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                {% for command in commands %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        {% if command.aliases or command.is_action %}
                            <td>
                                <abbr title="{% if command.aliases %}<strong>Aliases:</strong> {{ command.aliases }}{% endif %}{% if command.is_action %}{% if command.aliases %}<br>{% endif %}<strong>Action:</strong> yes{% endif %}" rel="tooltip">
                                    {{ command.name }}
                                </abbr>
                            </td>
                            <td>
                                {% for value in command.value %}
                                    {{ value|ircformat|raw }}{% if not loop.last %}<br>{% endif %}
                                {% endfor %}
                            </td>
                        {% else %}
                            <td>{{ command.name }}</td>
                            <td>
                                {% for value in command.value %}
                                    {{ value|ircformat|raw }}{% if not loop.last %}<br>{% endif %}
                                {% endfor %}
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <small>Hover over a command name for more info.</small>
{% endblock %}
